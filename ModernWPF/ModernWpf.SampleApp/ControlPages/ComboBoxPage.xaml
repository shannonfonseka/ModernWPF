<ui:Page
    x:Class="ModernWpf.SampleApp.ControlPages.ComboBoxPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:sc="clr-namespace:SamplesCommon;assembly=SamplesCommon"
    xmlns:sys="clr-namespace:System;assembly=mscorlib"
    xmlns:ui="http://schemas.modernwpf.com/2019"
    DataContext="{Binding RelativeSource={RelativeSource Self}}"
    mc:Ignorable="d">

    <ScrollViewer>
        <ui:SimpleStackPanel Style="{StaticResource ControlPageContentPanelStyle}">
            <sc:ControlExample HeaderText="A ComboBox with items defined inline and its width set.">
                <sc:ControlExample.Example>
                    <StackPanel>
                        <ComboBox
                            x:Name="Combo1" Width="200" ui:ControlHelper.Header="Colors" ui:ControlHelper.PlaceholderText="Pick a color"
                            SelectionChanged="ColorComboBox_SelectionChanged">
                            <sys:String>Blue</sys:String>
                            <sys:String>Green</sys:String>
                            <sys:String>Red</sys:String>
                            <sys:String>Yellow</sys:String>
                        </ComboBox>
                        <Rectangle
                            x:Name="Control1Output" Width="100" Height="30" Margin="0,8,0,0" />
                    </StackPanel>
                </sc:ControlExample.Example>
            </sc:ControlExample>

            <sc:ControlExample HeaderText="A ComboBox with its ItemsSource set.">
                <sc:ControlExample.Example>
                    <StackPanel>
                        <ComboBox
                            x:Name="Combo2" Width="200" ui:ControlHelper.Header="Font Toto" DisplayMemberPath="Item1"
                            ItemsSource="{Binding Fonts}"
                            SelectedIndex="2" SelectedValuePath="Item2" />
                        <TextBlock
                            x:Name="Control2Output"
                            FontFamily="{Binding SelectedValue, ElementName=Combo2, Mode=OneWay}"
                            Style="{StaticResource OutputTextBlockStyle}"
                            Text="You can set the font used for this text." />
                        <Button x:Name="ButtonCombo2" Click="ButtonCombo2_Click" />
                    </StackPanel>
                </sc:ControlExample.Example>
            </sc:ControlExample>

            <sc:ControlExample HeaderText="An editable ComboBox.">
                <sc:ControlExample.Example>
                    <StackPanel>
                        <ComboBox
                            x:Name="Combo3" Width="200" ui:ControlHelper.Header="Font Size" IsEditable="True"
                            ItemsSource="{Binding FontSizes}"
                            SelectedIndex="2" />
                        <TextBlock
                            x:Name="Control3Output" FontFamily="Segoe UI"
                            FontSize="{Binding SelectedValue, ElementName=Combo3, Mode=OneWay}"
                            Style="{StaticResource OutputTextBlockStyle}"
                            Text="You can set the font size used for this text." />
                    </StackPanel>
                </sc:ControlExample.Example>
            </sc:ControlExample>

            <sc:ControlExample HeaderText="A virtualized ComboBox.">
                <sc:ControlExample.Example>
                    <ComboBox
                        x:Name="Combo4" Width="200" ui:ControlHelper.Header="Virtualized">
                        <ComboBox.ItemsPanel>
                            <ItemsPanelTemplate>
                                <VirtualizingStackPanel />
                            </ItemsPanelTemplate>
                        </ComboBox.ItemsPanel>
                    </ComboBox>
                </sc:ControlExample.Example>
            </sc:ControlExample>
        </ui:SimpleStackPanel>
    </ScrollViewer>
</ui:Page>
